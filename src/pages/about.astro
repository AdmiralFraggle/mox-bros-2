---
import Layout from "@layouts/Layout.astro";
import Container from "@components/container.astro";
import Sectionhead from "@components/sectionhead.astro";
import { Picture } from "@astrojs/image/components";

const TeamImg1 =
  "https://www.sommerlawn.com/assets/cayden.77349521_ZPToM6.png";
const TeamImg2 =
  "https://www.sommerlawn.com/assets/spencer.475ca811_Pacqf.png";
const TeamImg3 =
  "https://www.sommerlawn.com/assets/jett1.ad723ec0_WT12T.png";

const team = [
  {
    name: "Cayden Moxley",
    title: "Co-owner",
    avatar: {
      src: TeamImg1,
      width: 480,
      height: 560,
    },
  },
  {
    name: "Spencer Moxley",
    title: "Co-owner & Head of sales",
    avatar: {
      src: TeamImg2,
      width: 580,
      height: 580,
    },
  },
  {
    name: "Jett Moxley",
    title: "Co-owner",
    avatar: {
      src: TeamImg3,
      width: 580,
      height: 580,
    },
  },
];
---

<Layout title="About">
  <Container>
    <Sectionhead>
      <Fragment slot="title">About</Fragment>
      <Fragment slot="desc">We are a small family owned business.</Fragment>
    </Sectionhead>

    <div class="flex flex-col gap-3 mx-auto max-w-4xl mt-16">
      <h2 class="font-bold text-3xl text-gray-800">
        Brightening People's Days With Freeze Dried Sweets.
      </h2>
      <p class="text-lg leading-relaxed text-slate-500">
        The Moxley Brothers have never been ones to shy away from an oppurtunity to provide value to the community. Mox Bros Candy Co. is no acception. We strive to provide the greatest value for all of our customers. 
      </p>
    </div>
    <div class="grid md:grid-cols-3 gap-10 mx-auto max-w-4xl mt-12">
      {
        team.map((item) => (
          <div class="group">
            <div class="w-full aspect-square">
              <Picture
                {...item.avatar}
                format="avif"
                alt="Team"
                widths={[200, 400]}
                aspectRatio="1:1"
                sizes="(max-width: 800px) 100vw, 400px"
                class="w-full h-full object-cover rounded transition  group-hover:-translate-y-1 group-hover:shadow-xl"
                format="avif"
              />
            </div>

            <div class="mt-4 text-center">
              <h2 class="text-lg text-gray-800"> {item.name}</h2>
              <h3 class="text-sm text-slate-500"> {item.title}</h3>
            </div>
          </div>
        ))
      }
    </div>
  </Container>
</Layout>
