---
import { Picture } from "@astrojs/image/components";
import heroImage from "assets/MoxBros Candy Co.-2.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:block">
    <Picture
      src={heroImage}
      alt="MoxBros Candy"
      widths={[100, 200, 400]}
      aspectRatio="4:4"
      sizes="(max-width: 200px) 100vw, 500px"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      MoxBros Candy Co.
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      We are a family owned freeze dried candy company.<wbr /> Our goal is complete customer statisfaction
    </p>
    <div class="mt-6 flex flex-col sm:flex-row gap-3">
      <Link
        href="/about"
        class="flex gap-1 items-center justify-center"
        rel="noopener">
        <Icon class="text-white w-5 h-5" name="bx:bxs-smile" />

        About Us
      </Link>
      <Link
        size="lg"
        style="outline"
        rel="noopener"
        href="/blog"
        class="flex gap-1 items-center justify-center"
        target="_blank">
        <Icon class="text-black w-4 h-4" name="bx:bxs-file-blank" />
        Blog
      </Link>
    </div>
  </div>
</main>
